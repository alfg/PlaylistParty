#receiver {
    background: #000000;
    width: 100%;
    height: 100vh;

    #player {
        width: 100%;
        height: 100vh;
        text-align:center;
        border:0px solid silver;
        display: table-cell;
        vertical-align:middle;
        color:#FFFFFF;
        background-color:#000000;
        font-weight:bold;
        font-family:Verdana, Geneva, sans-serif;
        font-size:40px;
    }

    #splash {
      position: relative;
      top: 40%;
      text-align: center;
    }

    .logo {
        font-family: 'Coustard', serif;
        font-size: 5rem;
        color: #4C6ACA;

        div {
            color: #4C6ACA;
            text-decoration: none;
        }

        .tv {
            color: #444;
        }
    }
}
