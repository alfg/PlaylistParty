.container {

    &.full-width {
        width: 100%;
        max-width: 100%;

        #player {
            height: 800px;
        }
    }

    &.full-screen {
        width: 100%;
        max-width: 100%;

        #player {
            height: 100vh;
        }
    }
}

#player {
    display: none;
    width: 100%;
    height: 600px;
}

.player-controls {
    display: none;
    text-align: center;
    margin-top: 10px;
}#casting {    background: no-repeat 0 -320px;    background-size: cover;    color: white;    display: none;    font-size: 24px;    width: 100%;    height: 400px;    text-align: center;    // -webkit-filter: blur(6px);}#casting-text {  background: rgba(0,0,0,0.4)  position: relative;  top: 20%;}